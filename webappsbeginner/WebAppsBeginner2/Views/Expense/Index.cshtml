@model IEnumerable<WebAppsBeginner2.Models.Expense>

<div class=" container p-3">
    <div class ="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense List</h2>
        </div>
        
        <div class="col-6">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Create New Expense</a>
            
        </div>
    </div> 
    <br />

    @if(Model.Count() > 0)
            {
                <table class="table table-bordered tabble-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Expense
                            </th>
                            <th>
                                Amount
                            </th>
                            <th>
                                Changes
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var expense in Model)
                        {
                        <tr>
                            <td width="30%">@expense.ExpenseName</td>
                            <td width="30%">@expense.Amount</td>
                            <td class="w-100 btn-group" role="group">
                                <a asp-controller="Expense" asp-action="Update" asp-route-Id="@expense.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Expense" asp-action="DeletePost" asp-route-Id="@expense.Id" class="btn btn-primary mx-1">Delete</a>
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>
    }
    else
            {
                <p> No Items Created Yet</p>
            }

</div>