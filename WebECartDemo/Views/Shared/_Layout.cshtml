<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET E-Cart</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(linkText:"E-Cart", actionName:"Index", controllerName:"Home", routeValues: new { area = "" }, htmlAttributes: new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink(linkText: "Home", actionName: "Index", controllerName: "Home")
                    </li>
                    <li>
                        @Html.ActionLink(linkText: "Contact", actionName: "Index", controllerName: "Home")
                    </li>
                    <li>
                        @Html.ActionLink(linkText: "About", actionName: "Index", controllerName: "Home")
                    </li>
                    <li>
                        @Html.ActionLink(linkText: "Service", actionName: "Index", controllerName: "Home")
                    </li>
                    <li>
                        @Html.ActionLink(linkText: "Item", actionName: "Index", controllerName: "Home")
                    </li>
                    <li>
                        @Html.ActionLink(linkText: "Shopping", actionName: "Index", controllerName: "Home")
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET E-Cart</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>